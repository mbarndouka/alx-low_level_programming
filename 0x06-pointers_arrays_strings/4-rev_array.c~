#include "main.h"
#include <stdio.h>

/**
 *reverse_array - function that reverses the content of an array of integers.
 *@a: the array of string to be reverse
 *@n: the number of elmt in the array
 *Return: void
 */

void reverse_array(char *a, int n)
{
int tmp, index;
for (index = n - 1; index >= n / 2; index--)
{
tmp = a[n - 1 - index];
a[n - 1 - index] = a[index];
a[index] = tmp;
}
}
